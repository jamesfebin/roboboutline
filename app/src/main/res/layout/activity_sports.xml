<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boutline.sports.activities.Walkthrough3"
    tools:ignore="MergeRootFrame" 
    android:background="#ffffff"
    android:padding="15dp">
    
    <TextView
        android:id="@+id/lblChooseSport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseSport"
        />
    
    <ListView
        android:id="@+id/lvSports"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <Button 
        android:id="@+id/btnSubmitSportsSelection"
        android:text="@string/save"
        android:background="@drawable/fbbuttonstates"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:padding="10dp" 
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>

