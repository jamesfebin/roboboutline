<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">
    
    <TextView
        android:id="@+id/lblChooseSport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/chooseSport"
        android:paddingTop="20dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/lblChooseSportDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/chooseSportDesc"
        android:layout_below="@id/lblChooseSport"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btnSubmitSportsSelection"
        android:text="@string/moveon"
        android:background="@color/blue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lvSports"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_above="@id/btnSubmitSportsSelection"
        android:layout_below="@id/lblChooseSportDesc"
        />

</RelativeLayout>

