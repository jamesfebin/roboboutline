<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="15dp">
    
    <TextView
        android:id="@+id/lblChooseSport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/chooseSport"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:textColor="@color/darkgray"
        />
    
    <ListView
        android:id="@+id/lvSports"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblChooseSport"
        android:paddingTop="20dp"
        android:divider="@color/white"
        />
    
    <Button 
        android:id="@+id/btnSubmitSportsSelection"
        android:text="@string/moveon"
        android:background="@drawable/bluebuttonstates"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>

