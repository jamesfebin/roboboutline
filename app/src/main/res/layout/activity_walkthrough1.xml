<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boutline.sports.activities.Walkthrough1"
    tools:ignore="MergeRootFrame"
    android:background="#ffffff">
    <TextView
	    android:id="@+id/hdrWalkthrough1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/board"
	    android:textSize="20sp"
	    android:textStyle="bold"
	    android:textColor="#1CACFF"
	    android:gravity="center_horizontal"
	    android:paddingTop="15dp"></TextView>
	<TextView
	    android:id="@+id/lblWalkthrough1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/walkthrough1"
	    android:layout_below="@id/hdrWalkthrough1"
	    android:textSize="16sp"
	    android:gravity="center_horizontal"
	    android:padding="20dp"
	    android:paddingBottom="10dp"></TextView>

	<ImageView
	    android:id="@+id/imgWalkthrough1"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:src="@drawable/walkthrough1"
	    android:layout_below="@id/lblWalkthrough1"
	    android:contentDescription="@string/walkthrough1"
	    android:scaleType="centerCrop"
	    android:padding="20dp" />
	
	<LinearLayout
	    android:id="@+id/pageindicator"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
	    android:layout_alignParentBottom="true"
	    android:background="#05A0CE"
	    android:orientation="horizontal"
	    android:padding="15dp">
	    
		<ImageView
		    android:id="@+id/imgActivePage"
		    android:layout_width="30dp" 
		    android:layout_height="wrap_content"
		    android:src="@drawable/curr_page"
		    android:contentDescription="@string/walkthrough1"
		    android:padding="2dp"
		     />
		<ImageView
		    android:id="@+id/imgInactivePage"
		    android:layout_width="30dp" 
		    android:layout_height="wrap_content"
		    android:src="@drawable/inactive_page"
		    android:contentDescription="@string/walkthrough1"
		    android:padding="2dp"
		     />
		<ImageView
		    android:id="@+id/imgInactivePage2"
		    android:layout_width="30dp" 
		    android:layout_height="wrap_content"
		    android:src="@drawable/inactive_page"
		    android:contentDescription="@string/walkthrough1"
		    android:padding="2dp"
		     />		
	</LinearLayout>
	<ImageView
		    android:id="@+id/imgMouseImage"
		    android:layout_width="35dp" 
		    android:layout_height="wrap_content"
		    android:src="@drawable/mousecircle"
		    android:layout_alignParentBottom="true"
		    android:contentDescription="@string/walkthrough1"
		     />

    <com.boutline.sports.helpers.SmoothProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:layout_alignParentTop="true"
        app:spb_sections_count="4"
        app:spb_colors="@array/pocket_bar_colors"
        app:spb_speed="2.0"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="4dp"
        app:spb_reversed="false"
        app:spb_mirror_mode="false"
        app:spb_progressiveStart_speed="1.5"
        app:spb_progressiveStop_speed="3.4"
        />

</RelativeLayout>