<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/pageindicator"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/imgInactivePage0"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_page"
            android:contentDescription="@string/walkthrough1"
            android:padding="2dp"
            />

        <ImageView
            android:id="@+id/imgInactivePage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_page"
            android:contentDescription="@string/walkthrough3"
            android:padding="2dp"
            />
        <ImageView
            android:id="@+id/imgInactivePage2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_page"
            android:contentDescription="@string/walkthrough3"
            android:padding="2dp"
            />
        <ImageView
            android:id="@+id/imgActivePage2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/active_page"
            android:contentDescription="@string/walkthrough3"
            android:padding="2dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/lblWalkthrough3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/walkthrough3"
        android:layout_above="@id/pageindicator"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="#999999"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/hdrWalkthrough3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lblWalkthrough3"
        android:text="@string/talktous"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ab_solid_bostyle"
        android:layout_above="@id/hdrWalkthrough3">
        <ImageView
            android:id="@+id/imgWalkthrough3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iframe"
            android:contentDescription="@string/walkthrough3"
            android:scaleType="centerCrop"
            android:paddingRight="50dp"
            android:paddingTop="50dp"
            android:paddingLeft="50dp"/>
    </LinearLayout>
</RelativeLayout>