<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sportContainer"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#222222">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgSport"
        android:src="@drawable/dummy"
        android:scaleType="centerCrop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <RelativeLayout
        android:id="@+id/sportmaniac"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

	    <TextView
	        android:id="@+id/lblSportName"
	        android:text="@string/cricket"
            android:layout_centerVertical="true"
            android:textSize="28sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        />

        <TextView
            android:id="@+id/lblManiac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/maniac"
            android:paddingLeft="5dp"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/lblSportName"
            />
    </RelativeLayout>
	    <TextView
	        android:id="@+id/lblSportDescription"
	        android:text="@string/dummy"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/sportmaniac"
	        android:layout_width="wrap_content"
            android:textSize="12sp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
            android:background="@drawable/whiteroundbtn"
	        />

    <CheckBox
        android:id="@+id/chkFollowStatus"
        style="@style/CustomFollowTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25dp"
        android:paddingRight="30dp"/>

 </RelativeLayout>

