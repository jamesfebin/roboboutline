<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    
		    <TextView
		        android:id="@+id/lblConversationName"
		        android:text=""
                android:paddingBottom="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#343D42"
		        />
		    
		    <TextView
		        android:id="@+id/lblConversationTopic"
		        android:text=""
                android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#9AA3A8"
		        android:paddingBottom="5dp"
		        android:layout_below="@id/lblConversationName"
		        />
		    
		     <TextView
		        android:id="@+id/lblLastMessage"
		        android:text=""
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#9AA3A8"
		        android:paddingBottom="5dp"
		        android:layout_below="@id/lblConversationTopic"
		        />
            <ImageView
                android:id="@+id/unreadMessage"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/unreadmsgs"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lblLastMessage">

            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgMember1"
                android:src="@drawable/dummy"
                android:scaleType="centerCrop"
                app:corner_radius="30dip"
                app:oval="true"
                app:mutate_background="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                />
            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgMember2"
                android:src="@drawable/dummy"
                android:scaleType="centerCrop"
                app:corner_radius="30dip"
                app:oval="true"
                app:mutate_background="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                />
            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgMember3"
                android:src="@drawable/dummy"
                android:scaleType="centerCrop"
                app:corner_radius="30dip"
                app:oval="true"
                app:mutate_background="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                />
            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgMember4"
                android:src="@drawable/dummy"
                android:scaleType="centerCrop"
                app:corner_radius="30dip"
                app:oval="true"
                app:mutate_background="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                />
            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgMember5"
                android:src="@drawable/dummy"
                android:scaleType="centerCrop"
                app:corner_radius="30dip"
                app:oval="true"
                app:mutate_background="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                />
        </LinearLayout>
</RelativeLayout>

