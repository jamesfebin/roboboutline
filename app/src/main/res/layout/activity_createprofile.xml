<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblProfile"
        android:text="Tell us about you"
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/lblProfilePic"
        android:text="Upload your profile picture"
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:layout_below="@id/lblProfile"
        />

    <ImageView
        android:id="@+id/imgProPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/lblProfilePic"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dummy"
        />



    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProPic"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:hint="Enter your name here"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:paddingTop="30dp"
        />


    <Button
        android:id="@+id/btnContinue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Continue"
        android:background="@color/darkgray"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>