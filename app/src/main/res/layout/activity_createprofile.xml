<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <TextView
        android:id="@+id/lblProfile"
        android:text="@string/giveidentity"
        android:textColor="@color/blue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/lblProfilePic"
        android:text="Upload your profile picture"
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:layout_below="@id/lblProfile"
        />

    <ImageView
        android:id="@+id/imgProPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/lblProfilePic"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/anon"
        android:scaleType="centerCrop"
        />

    <View
        android:id="@+id/div1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgProPic"
        android:background="#dcdcdc"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/profileFullName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div1"
        android:layout_marginLeft="10dp"
        android:inputType="text"
        android:hint="@string/entername"
        android:layout_marginRight="10dp"
        android:padding="25dp"
        android:background="@drawable/edittext_style"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/div2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profileFullName"
        android:background="#dcdcdc"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnContinue"
        android:contentDescription="@string/dummy"
        android:src="@drawable/go"
        />


</RelativeLayout>