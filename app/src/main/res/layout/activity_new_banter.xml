<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boutline.sports.activities.Walkthrough3"
    tools:ignore="MergeRootFrame" >
    
    <TextView 
        android:id="@+id/lblGiveName"
        android:text="@string/givebantername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <EditText
        android:id="@+id/txtBanterName"
        android:text="@string/dummy"
        android:hint="@string/dummy"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_below="@id/lblGiveName"
        />
    
    <TextView 
        android:id="@+id/lblChooseTopic"
        android:text="@string/choosetourforbanter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBanterName" />
    
     <ListView
        android:id="@+id/lvSports"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblChooseTopic"
        />
    
</RelativeLayout>

