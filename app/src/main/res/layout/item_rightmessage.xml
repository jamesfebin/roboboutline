<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/proPicContainer"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/messageProPicRight"
            android:src="@drawable/dummy"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/lblMessage"
        android:text=""
        android:layout_toLeftOf="@id/proPicContainer"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:background="@drawable/rightbubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343D42"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblMessage"
        android:paddingRight="75dp"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/lblSenderName"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9AA3A8"
            />

        <TextView
            android:id="@+id/lblConjunction"
            android:text=" at "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9AA3A8"
            android:textSize="12sp"
            android:layout_toRightOf="@id/lblSenderName"
            />

        <TextView
            android:id="@+id/lblMessageTime"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9BA4A9"
            android:textSize="12sp"
            android:layout_toRightOf="@id/lblConjunction"
            />
    </RelativeLayout>
</RelativeLayout>

