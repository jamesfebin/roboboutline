<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblForgotPassword"
        android:text="Forgot Password"
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/lblEmailId"
        android:text="Enter your email id"
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:layout_below="@id/lblForgotPassword"
        />


    <EditText
        android:id="@+id/txtEmailId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblEmailId"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:hint=""
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:paddingTop="30dp"
        />

    <TextView
        android:id="@+id/lblPasswordDirections"
        android:text="Your password will be emailed to you at the email id given above."
        android:textColor="@color/darkgray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:layout_below="@id/txtEmailId"
        />

    <Button
        android:id="@+id/btnRetrieve"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Mail me"
        android:background="@color/darkgray"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>