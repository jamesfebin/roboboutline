<resources>

    <style name="Theme.Bostyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_bostyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Bostyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Bostyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Bostyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Bostyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Bostyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_bostyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_bostyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Bostyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/semidarkgray</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.TabTextTheme</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.Solid.Bostyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_bostyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_bostyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_bostyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Bostyle</item>
        <item name="android:titleTextStyle">@color/semidarkgray</item>
        <item name="android:textColor">@color/semidarkgray</item>
    </style>

    <style name="ActionBarTabTextStyle.TabTextTheme" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/semidarkgray</item>
    </style>

    <style name="ActionBar.Transparent.Bostyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_bostyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Bostyle</item>
        <item name="android:titleTextStyle">@color/semidarkgray</item>
    </style>

    <style name="PopupMenu.Bostyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bostyle</item>
    </style>

    <style name="DropDownListView.Bostyle" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_bostyle</item>
    </style>

    <style name="ActionBarTabStyle.Bostyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_bostyle</item>
    </style>

    <style name="DropDownNav.Bostyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_bostyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bostyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_bostyle</item>
    </style>

    <style name="ProgressBar.Bostyle" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_bostyle</item>
    </style>

    <style name="ActionButton.CloseMode.Bostyle" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_bostyle</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Bostyle.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Bostyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Bostyle</item>
    </style>

    <!-- Two way view -->
    <style name="TwoWayView">
        <item name="android:orientation">vertical</item>
    </style>
    
    <!--  Smooth Progress Bar -->
    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>

    <style name="SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_colors">@array/pocket_bar_colors</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
        <item name="spb_progressiveStart_activated">@bool/spb_default_progressiveStart_activated</item>
        <item name="spb_background">@null</item>
        <item name="spb_generate_background_with_colors">false</item>
        <item name="spb_gradients">false</item>
    </style>
    
    <!-- Custom Follow Toggle Buttons -->
    <style name="CustomFollowTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
    	<item name="android:button">@drawable/followbtn_style</item>  
	</style>
    <!-- Custom checkbox style -->
    <style name="CustomCheckTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbtn_style</item>
    </style>
    
   </resources>
