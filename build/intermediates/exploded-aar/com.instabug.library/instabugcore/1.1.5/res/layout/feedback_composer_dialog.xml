<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:orientation="vertical"
    android:background="#ccc">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/user_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/emailplaceholder"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/text_composer"
                android:textColor="@android:color/black"
                android:background="@drawable/instabug_text_box"/>

        </LinearLayout>


        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/email_separator"
            android:background="@android:color/black"/>

        <EditText
            android:id="@+id/text_composer"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="false"
            android:gravity="top"
            android:textColor="@android:color/black"
            android:imeOptions="actionDone"
            android:hint="@string/commentplaceholder"
            android:background="@drawable/instabug_text_box"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/instabug_logo"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="15dp"
                android:src="@drawable/instabug_logo"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Powered by Instabug"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/submitbutton"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:id="@+id/send_message"/>
